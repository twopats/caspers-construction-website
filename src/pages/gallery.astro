---
import Layout from "../layouts/Layout.astro";

const showcaseImages = await Astro.glob(
	"../../public/showcase/*.{png,jpg,jpeg,gif,svg}",
);
---

<Layout title="Gallery">
	<div class="w-screen flex flex-wrap gap-4 py-16">
		{
			showcaseImages.map((image, i: number) => {
				if (i > 5) return;
				return (
					<button
						class="w-96"
						hx-get={`/gallery/${i}`}
						hx-target="body"
						hx-trigger="click"
						hx-swap="beforeend"
					>
						<img
							src={image.default.src}
							class="border-white  aspect-video hover:brightness-110 cursor-pointer object-cover overflow-hidden inline-block  shrink-0"
							alt=""
						/>
					</button>
				);
			})
		}
	</div>
</Layout>
