	<div
		id="landing-gallery"
		class="flex w-screen overflow-x-scroll py-8 gap-4"
	>
		{
			showcaseImages.map((image, i) => {
				if (i > 7) return null;
				return (
					<img
						src={image.default.src}
						class="w-80 aspect-video hover:brightness-110 cursor-pointer object-cover overflow-hidden inline-block shrink-0"
						alt=""
					/>
				);
			})
		}
	</div>
	<a href="/gallery"  class="text-primary mx-8 space-x-4 p-4 border border-primary w-min flex whitespace-nowrap  cursor pointer uppercase primary ml-auto hover:brightness-90 bg-white">Go to full gallery 

