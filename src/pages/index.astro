---
import Layout from "../layouts/Layout.astro";

const partners = await Astro.glob(
	"../../public/partners/*.{png,jpg,jpeg,gif,svg}",
);

const showcaseImages = await Astro.glob(
	"../../public/showcase/*.{png,jpg,jpeg,gif,svg}",
);

console.log(showcaseImages);
---

<Layout title="Casper's Construction Home">
	<div
		id="house-model-canvas"
		class="grid-canvas w-full border-secondary h-4/5 relative flex enter"
	>
		<h1
			class="m-8 text-black mt-16 absolute p-4 uppercase text-4xl hover:underline transform duration-200 cursor-pointer tracking-wide"
		>
			<span> Casper's</span>
			<br />
			<span class="text-primary"> Construction</span>
			<br />
			<span class=""> Corporation</span>
		</h1>
		<div class="w-full h-full justify-end flex items-center">
			<img
				src="/showcase/sample-1.jpeg"
				class="m-8 h-3/4 rounded-xl overflow-hidden"
				alt=""
			/>
		</div>
	</div>
	<div id="partners" class="my-8 overflow-x-hidden">
		<div id="partners-slide" class="flex animate-partners">
			<div class="flex justify-center items-center">
				{
					[...Array(4)].map(() => {
						return partners.map(
							(partner) => {
								return (
									<img
										src={
											partner
												.default
												.src
										}
										class="h-10 mr-16    "
										alt=""
									/>
								);
							},
						);
					})
				}
			</div>
		</div>
	</div>

	<div class="w-full space-y-8 p-8 flex flex-col justify-center">
		<h2 class="font-bold text-4xl text-primary">SECTION 1 TITLE</h2>
		<p class="text-md leading-relaxed">
