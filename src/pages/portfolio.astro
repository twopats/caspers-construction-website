			{
				Array.from({ length: 6 }).map((_, i) => {
					return (
						<div class="interactive duration-100 ease-out border border-gray-400">
							<div class="h-72 aspect-[411/325] bg-primary ">
								{i}
							</div>
							<div class="w-full h-fit p-4">
								title here
							</div>
						</div>
					);
				})
			}
		</section>
	</div>
</Layout>
