---
interface Props {
	title: string;
}

const { title } = Astro.props;
import  "../styles/index.css";
import Logo from "../components/Logo.astro";
---
<!DOCTYPE HTML>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Casper's Construction" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-white">
		<nav class=" w-full  py-4 px-8 fixed bg-white duration-300    flex justify-between items-center z-10 ">

				<a href="tel:+5629871716" target="_blank" class="flex items-center space-x-4">
				<img src="/phone.svg" class="w-6" alt="">
					<span class="text-xs">
					(562) 987-1716 
				</span>
				</a>
			<ul class=" flex space-x-8 uppercase font-medium items-center text-xs tracking-wide">
				<a class="px-4 " href="/">home</a>
				<a href="/about">about</a>
				<a href="/gallery">gallery</a>
				<a href="/contact">contact</a>



			</ul>

				<button class="bg-primary text-xs text-white p-2 cursor-pointer hover:brightness-110 active:border-blue-500 border">
				Get An Estimate</button>
		</nav>
		<section class="">
		<slot />
		</section>
		<footer id="footer" class="bg-dark justify-between items-center text-white flex space-x-12 p-8"> 
			<a href="/">
				<image src="/3c-logo.svg" class="w-24 cursor-pointer"></image>
			</a>
			<div class=" flex flex-col justify-center ">
				<h2 class="text-2xl font-bold uppercase">Casper's Construction</h2>
				<p class="text-sm">3530 Long Beach Blvd. Suite 240. Long Beach, CA </p>
				<p class="text-sm">(562) 987-1716 </p>
			</div>
			<div class=" flex flex-col justify-center uppercase ">
				<h2 class="text-2xl font-bold">Hours</h2>
				<p class="text-sm">Monday - Friday</p>
				<p class="text-sm">9:00am - 6:00pm</p>
			</div>
			<div class="flex-1 flex flex-col justify-center uppercase">
				<h2 class="text-2xl font-bold">Social</h2>
				<p class="text-sm">Facebook</p>
				<p class="text-sm">Instagram</p>
			</div>

		</footer>
	</body>
