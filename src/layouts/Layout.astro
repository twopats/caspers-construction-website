---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Casper's Construction" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-stone">
		<nav class=" w-full   px-8 py-4 flex justify-end items-center">

			<ul class="flex space-x-8 uppercase font-medium text-xs tracking-wide">
				<li class="">home</li>
				<li class="">about</li>
				<li class="">gallery</li>
				<li class="">contact</li>
			</ul>
		</nav>
		<section class="p-8">

		<slot />
		</section>
	</body>
</html>
